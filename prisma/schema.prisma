generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model AuthLocalProfile {
  userId    String      @id
  orgId     String
  profile   ProfileType
  name      String?
  centerId  String?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("authlocalprofile")
}

enum ProfileType {
  PATIENT
  CENTER_ADMIN
  ORG_ADMIN
  OPERADOR_SALUD
  PERSONAL_SALUD 
}

model Credential {
  id                String   @id @default(uuid())
  orgId             String
  userId            String
  email             String       @unique  
  passwordHash      String
  createdAt         DateTime @default(now())
  dni               String   @unique
  profile           ProfileType @default(PATIENT)
  name              String?
  centerId          String?
  telefono          String?
  usuarioVerificado Boolean   @default(false)

  @@map("credential")
}

model RefreshToken {
  id        String   @id @default(uuid())
  userId    String
  jti       String   @unique
  hash      String
  revoked   Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@map("refreshtoken")
}
